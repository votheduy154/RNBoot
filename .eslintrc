{
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "plugins": ["import", "react", "react-native"],
  "globals": {
    "document": false
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true,
      "experimentalDecorators": true
    }
  },
  "env": {
    "jest": true,
    "node": true
  },
  "rules": {
    "object-curly-newline": [0, { "multiline": true, "minProperties": 4 }],
    "react/jsx-indent": [0 , 2],
    "no-unused-vars": 1,
    "max-len": [0, 160, 0],
    "react/prop-types": 0,
    "comma-dangle": 0,
    "no-use-before-define": 0,
    "quote-props": 1,
    "react/jsx-no-bind": 1,
    "react/prefer-stateless-function": 0,
    "padded-blocks": 0,
    "no-shadow": 1,
    "no-return-assign": 1,
    "no-case-declarations": 1,
    "react-native/no-unused-styles": 1,
    "react-native/split-platform-components": 1,
    "no-underscore-dangle": 0,
    "global-require": 0,
    "import/no-unresolved": 1,
    "no-param-reassign": 0,
    "consistent-return": 1,
    "react/no-multi-comp": 1,
    "no-confusing-arrow": 0,
    "react/jsx-filename-extension": 0,
    "no-console": 0,
    "react/no-unused-state": 1,
    "react/sort-comp": [
      2,
      {
        "order": [
          "static-methods",
          "lifecycle",
          "everything-else",
          "render",
          "did-render"
        ],
        "groups": {
          "lifecycle": [
            "displayName",
            "propTypes",
            "contextTypes",
            "childContextTypes",
            "mixins",
            "statics",
            "defaultProps",
            "constructor",
            "getDefaultProps",
            "getInitialState",
            "state",
            "getChildContext",
            "componentWillMount",
            "componentWillReceiveProps",
            "shouldComponentUpdate",
            "componentWillUpdate"
          ],
          "did-render": [
            "componentWillUnmount",
            "componentDidMount",
            "componentDidUpdate"
          ]
        }
      }
    ]
  }
}
